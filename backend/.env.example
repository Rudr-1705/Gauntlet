# Gauntlet Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/gauntlet_db?schema=public"

# Server Configuration
PORT=4444
NODE_ENV=development

# Blockchain Configuration
# REQUIRED: RPC URL for your network (e.g., Ethereum mainnet, Sepolia testnet, etc.)
RPC_URL="https://your-rpc-provider.com/your-api-key"
# Examples:
# Infura: "https://sepolia.infura.io/v3/YOUR_API_KEY"
# Alchemy: "https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY"

# REQUIRED: Smart Contract Addresses (deploy contracts first to get these)
SPONSOR_DAO_ADDRESS="0x..."
VALIDATOR_DAO_ADDRESS="0x..."

# PYUSD Token Address (depends on your network)
# Ethereum Mainnet: 0x6c3ea9036406852006290770BEdFcAbA0e23A0e8
# Sepolia Testnet: Deploy your own test token
PYUSD_TOKEN_ADDRESS="0x..."

# OPTIONAL: Private Key for Backend Operations (for automated transactions)
# WARNING: Never commit this to version control! Add .env to .gitignore
# PRIVATE_KEY="0x..."

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# AI Services (Optional, if using AI validation features)
# OPENAI_API_KEY=sk-...

# The Graph (Optional, if using subgraph queries)
# GRAPH_API_URL=https://api.thegraph.com/subgraphs/name/yourproject/gauntlet

# Logging
LOG_LEVEL="info"
